---
const { event } = Astro.props;
/*
  event: {
    id: number,
    name: string,
    image: string,
    contributionType: string,
    amount: number
  }
*/
---

<div class="event-card">
  <img src={event.image || '/fallback-event.jpg'} alt={`${event.name} logo`} />
  <div class="event-info">
    <h3>{event.name}</h3>
    <p><strong>Type:</strong> {event.contributionType}</p>
    <p><strong>Amount:</strong> ${event.amount.toLocaleString()}</p>
  </div>
</div>

<style>
  .event-card {
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .event-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }
  .event-card img {
    width: 100%;
    height: 150px;
    object-fit: cover;
  }
  .event-info {
    padding: 1rem;
  }
  .event-info h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #007bff;
  }
  .event-info p {
    margin: 0.3rem 0;
    font-size: 0.95rem;
    color: #333;
  }
</style>