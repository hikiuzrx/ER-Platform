---
import '../assets/styles.css'; 
---
<section class="event-contributions">
  <div class="container">
    <h1 class="title">Event Contributions</h1>
    
    <!-- Formulaire pour ajouter une contribution -->
    <form class="contribution-form">
      <div class="form-group">
        <label for="partnerName">Partner Name</label>
        <input type="text" id="partnerName" name="partnerName" placeholder="Enter partner name" required />
      </div>

      <div class="form-group">
        <label for="eventName">Event Name</label>
        <select id="eventName" name="eventName">
          <option value="conference2023">Conference 2023</option>
          <option value="hackathon">Hackathon</option>
          <option value="annualGala">Annual Gala</option>
        </select>
      </div>

      <div class="form-group">
        <label for="contributionType">Contribution Type</label>
        <select id="contributionType" name="contributionType">
          <option value="financial">Financial</option>
          <option value="media">Media</option>
          <option value="other">Other</option>
        </select>
      </div>

      <div class="form-group">
        <label for="contributionAmount">Amount (if financial)</label>
        <input type="number" id="contributionAmount" name="contributionAmount" placeholder="Enter amount" />
      </div>

      <button type="submit" class="btn">Add Contribution</button>
    </form>

    <!-- Table pour afficher les contributions -->
    <div class="contribution-list">
      <h2>Current Contributions</h2>
      <table>
        <thead>
          <tr>
            <th>Partner Name</th>
            <th>Event</th>
            <th>Type</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Example Partner</td>
            <td>Conference 2023</td>
            <td>Financial</td>
            <td>$5000</td>
          </tr>
          <tr>
            <td>Another Partner</td>
            <td>Hackathon</td>
            <td>Media</td>
            <td>N/A</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
  /* Styles pour le design */
  .event-contributions {
    padding: 40px;
    background-color: #f9f9f9;
    border-radius: 8px;
  }

  .title {
    font-size: 2rem;
    color: #333;
    margin-bottom: 20px;
  }

  .contribution-form {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 40px;
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    flex: 1 1 45%;
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    font-weight: bold;
    margin-bottom: 8px;
  }

  .form-group input,
  .form-group select {
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .btn {
    background-color: #4285f4;
    color: white;
    padding: 10px 20px;
    font-size: 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #34a853;
  }

  .contribution-list {
    margin-top: 20px;
  }

  .contribution-list table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .contribution-list th,
  .contribution-list td {
    text-align: left;
    padding: 12px 16px;
    border-bottom: 1px solid #ddd;
  }

  .contribution-list th {
    background-color: #f4f4f4;
    font-weight: bold;
  }

  .contribution-list tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }
</style>
